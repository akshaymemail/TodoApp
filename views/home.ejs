<%- include('header') %>
<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>
<div class="box">
    <% newListItem.forEach(function(item) {%>
    <form action="/delete" method="post">
        <div class="item">
            <input name="itemId" value= <%= item._id %> type="checkbox" onChange = "this.form.submit()">
            <p><%= item.name %> </p>
        </div>
    </form>

    <% }) %>
    <form class="item" action="/" method="post">
        <input type="text" name="newItem" autofocus placeholder="New Item" autocomplete="off" required>
        <button name="list" value="<%= listTitle %> " type="submit">+</button>
    </form>
</div>

<%- include('footer') %>